<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <ul class="list-inline">
        <% @experience.categories.each do |category|%>
        <li><%= category.name %></li>
        <% end %>
      </ul>
      <div class="card">
        <div class="card-title">
          <h1><%=@experience.title%></h1>
        </div>
        <div class="card-image" style="background-image:url('http://unsplash.it/400/400')">
        </div>
        <div class="card-user">
          <h2><em>Inspired by</em><%= @experience.user.first_name %></h2>
        </div>
        <div>

        </div>

      </div>

    </div>
  </div>
</div>


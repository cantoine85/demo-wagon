<%=render 'shared/banner', experience: @experience %>

<div id="detailInfo">
  <%= render 'shared/show_details', experience: @experience %>
</div>

<%= content_for :after_js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#showDetails').on('click', function() {
        $('#detailInfo').toggleClass('hidden');
        if($('.fa-arrow-up').length > 0) {
          $('.fa-arrow-up').attr('class', "fa fa-arrow-down");
        } else {
          $('.fa-arrow-down').attr('class', "fa fa-arrow-up");
        }
      })
    })
  <% end %>
<% end %>

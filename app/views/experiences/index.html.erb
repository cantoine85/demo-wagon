<!-- <h1 class="box-red text-center padding-60">Découvrez toutes les expériences de votre réseau!</h1> -->
<div class = "container">
  <div class = "row" >
    <div class="col-xs-12 no-padding text-center ">
      <div class="banner" id="experience_<%= @experience.id %>" style="background-image: url(<%= @experience.adventure.picture.url %>);">
        <%= render 'shared/banner', experience: @experience %>
      </div>
    </div>
  </div>
  <div class="row hidden" id="details">
    <div class="col-xs-12">
      <div class="experience-details-card">
        <!-- Start date -->
        <div class="experience-details-card-item">
          <i class="fa fa-calendar"></i>
          <span><%= @experience.adventure.start_date %></span>
        </div>
        <!-- End date -->
        <div class="experience-details-card-item">
          <i class="fa fa-calendar"></i>
          <span><%= @experience.adventure.end_date %></span>
        </div>
        <!-- Duration -->
        <div class="experience-details-card-item">
          <i class="fa fa-hourglass-start"></i>
          <span><%= @experience.adventure.duration %></span>
        </div>
        <!-- Description -->
        <div class="experience-details-card-item">
          <span>
            <i class="fa fa-align-justify"></i>
            <% @experience.adventure.description %>
          </span>
        </div>
        <!-- Address -->
        <div class="experience-details-card-item">
          <i class="fa fa-compass"></i>
          <span><%= @experience.adventure.address %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 padding-0">
      <div class="board">
        <%= render 'shared/experience_selection_board', experience: @experience %>
      </div>
    </div>
  </div>
</div>
<%= content_for :after_js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $('#showDetails').on('click', function() {
        $('#details').toggleClass('hidden');
        if($('.fa-arrow-up').length > 0) {
          $('.fa-arrow-up').attr('class', "fa fa-arrow-down");
        } else {
          $('.fa-arrow-down').attr('class', "fa fa-arrow-up");
        }
      })
    })
  <% end %>
<% end %>


<div class="container margin-bottom-74" >
  <div class="row">
    <div class="col-xs-10 text-center col-xs-offset-1">
      <%= simple_form_for(@adventure) do |f| %>
          <%= f.error_notification %>
          <%= f.input :title %>
          <%= f.input :category, as: :select, collection: Adventure::CATEGORIES, prompt: "choisissez une catégorie" %>
          <%= f.input :picture %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.input :start_date, as: :string, input_html: {class: 'datetime'}%>
          <%= f.input :end_date, as: :string, input_html: {class: 'datetime'}%>
          <%= f.input :duration %>

          <%= f.simple_fields_for :status do |ff| %>
            <%= ff.input :status, as: :radio_buttons, collection: ['déjà fait', 'à faire'] %>
          <% end %>
          <%= f.button :submit, "Créez", class: "ghost-btn-grey" %>
      <% end %>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $("#datepicker").datepicker();
    });
  <% end %>
<% end %>

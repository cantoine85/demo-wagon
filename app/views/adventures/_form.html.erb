<div class="form">
  <%= simple_form_for(@adventure) do |f| %>
    <div class="container" >
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <%= f.error_notification %>
          <%= f.input :title, label: false, placeholder:"Faire un road trip en combi..."%>
          <%= f.input :category, label: false, as: :select, collection: Adventure::CATEGORIES, prompt: "Choisissez une catégorie" %>
          <%= f.input :picture, label: false %>
          <%= f.input :description, label: false, placeholder: "Description" %>
          <%= f.input :address, label: false, placeholder: "Adresse" %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-5 col-xs-offset-1">
          <%= f.input :start_date, label:false, placeholder: "Date de début", as: :string, input_html: {class: 'datetime'}%>
        </div>
        <div class="col-xs-5">
          <%= f.input :end_date, label:false, placeholder: "Date de fin", as: :string, input_html: {class: 'datetime'}%>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 text-center inline">
          <%= f.simple_fields_for :status do |ff| %>
            <div class="radio-button">
              <%= ff.input :status, label: false, as: :radio_buttons, checked: 'déjà fait', collection: ['déjà fait','à faire'] %>
            </div>
          <% end %>
          <%= f.button :submit, "Créez", class: 'ghost-btn-white' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= content_for :after_js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $("#datepicker").datepicker();
    });
  <% end %>
<% end %>

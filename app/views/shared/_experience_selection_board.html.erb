      <%= current_user.experiences_to_do_count %>
    </span>
    <i class="fa fa-heart"></i>
    <p>Expériences à vivre</p>
  <% end %>
</span>
<!-- Check Item : Done -->
<span class="board-game-item">
  <%=link_to experiences_path(id: experience, status: "done"), class:"hover-green", method: :post, remote: true do %>
  <span id="doneCount">
    <%= current_user.experiences_done_count %>
  </span>
    <i class="fa fa-check"></i>
